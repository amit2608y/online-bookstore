pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/your-username/online-bookstore.git'
            }
        }

        stage('Build') {
            steps {
                script {
                    // Run Maven build (adjust if you use Gradle)
                    bat 'mvn clean install'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    // Run unit tests
                    bat 'mvn test'
                }
            }
        }

        stage('Package') {
            steps {
                script {
                    bat 'mvn package'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    echo 'Deployment step placeholder'
                }
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: '**/target/*.jar', allowEmptyArchive: true
        }
    }
}
